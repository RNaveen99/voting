<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <script defer src="js/limit.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
</head>

<body>
    <h3 class="center-align">
        <%=data.electionName%>
    </h3>
    <h5 class="right">Votes:<%=data.totalVoter%></h5>
    <div class="row">
        <form action="/vote" method="POST" class="col s12" id="electionVoting">
            <div class="row">
                <% data.post.forEach(post => { %>
                <div class="col s12 l12">
                    <fieldset>
                        <legend><%=post%></legend>
                        <% let i = data.post.indexOf(post);%>
                        <input type="hidden" class="vLimit" name="vLimit[<%=i%>]" value="<%=data.votingLimit[i]%>">
                        <% data.candidateName[i].forEach(candidate => { 
                    let j = data.candidateName[i].indexOf(candidate); %>
                        <p>
                            <label for="cName<%=i%><%=j%>">
                                <input type="checkbox" name="cName[<%=i%>][]" id="cName<%=i%><%=j%>" class="cName<%=i%>"
                                    value="<%=candidate%>">
                                <span><%=candidate%></span>
                            </label>
                        </p>
                        <%});%>
                    </fieldset>
                </div>
                <%});%>
            </div>
            <button type="submit" class="btn " name="submitbtn" id="submitbtn">Vote</button>
        </form>
    </div>
    <div id="err" class="red row">
    </div>
</body>

</html>